@model AppUserModel
@{
    ViewData["title"] = "Create User";
}
<h4>Create User</h4>
<div class="col-md-9">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>UserName</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-valilation-for="UserName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-valilation-for="Email" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-valilation-for="PhoneNumber" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="PasswordHash" class="form-control" />
            <span asp-valilation-for="PasswordHash" class="text-danger" />
        </div>
        @*<div class="form-group">
            <label>Status</label>
            <select asp-for="Status" class="form-control">
                <option value="1">Hiển thị</option>
                <option value="0">Ẩn</option>
            </select>
            <span asp-valilation-for="Status" class="text-danger" />
        </div>*@
        <div class="form-group">
            <button class="btn btn-primary">Create</button>
        </div>

    </form>
    <a asp-action="Index">Back to list Users</a>
</div>
@section Scrips
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


